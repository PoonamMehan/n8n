generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
  // output   = "../node_modules/@prisma/client"
}

datasource db {
  provider = "postgresql"
}

enum AllWebhookMethods {
  GET
  POST
  PUT
}

model Workflow {
  id          Int          @id @default(autoincrement())
  title       String       @unique
  nodes       Json         @default("[]") @db.JsonB
  connections Json         @default("[]") @db.JsonB
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @default(now()) @updatedAt
  userId      String
  user        User         @relation(fields: [userId], references: [id])
  webhook     Webhook?
  executing   Boolean      @default(false)
  executions  Executions[]
}

// jab bhi clicked -> set this true -> send signal to the webhook to be true -> in FE check if trigger == Webhook then also add this in the webhook table(Executing: true)
// webhook triggered -> check this first -> if true then run -> otherwise send response: "Start the workflow first"

model Webhook {
  id                        String   @id @default(uuid())
  path                      String   @unique //we will use this to find the webhook
  corresponding_workflow_id Int      @unique
  corresponding_workflow    Workflow @relation(fields: [corresponding_workflow_id], references: [id], onDelete: Cascade)
  executing                 Boolean
}

model Credentials {
  id        Int      @id @default(autoincrement())
  title     String
  platform  String
  data      Json     @db.JsonB
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id])

  @@index([platform])
}

model User {
  id          String        @id @default(uuid())
  // username    String       @unique
  email       String        @unique
  // password    String
  sessions    String[]      @default([])
  isVerified  Boolean       @default(false)
  workflows   Workflow[]
  credentials Credentials[]
}

model Executions {
  id          String    @id @default(uuid())
  workflowId  Int
  workflow    Workflow  @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  status      String
  log         String
  nodeDetails Json      @default("{}") @db.JsonB
  createdAt   DateTime  @default(now())
  finishedAt  DateTime? @default(now())
}
